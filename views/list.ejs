<%- include ('header') -%>

    <div class="box" id="heading">
        <h1>
            <%= listTitle %>
        </h1>
    </div>

    <div class="box">
        <% for(let todo of newTodo){ %>

            <form action="/delete" method="post">
                <div class="item">
                    <input type="checkbox" value=" <%= todo._id %>" name="checkBox" onchange="this.form.submit()">
                    <p>
                        <%= todo.todoMsg %>
                    </p>
                </div>
                <input type="hidden" name="listName" value="<%= listTitle %>"></input>
            </form>


            <% } %>

                <form class="item" action="/" method="post">
                    <input type="text" name="q" placeholder="New item" autocomplete="off">
                    <button type="submit" name="list" value=<%=listTitle %>>+</button>
                </form>

    </div>

    <%- include ('footer') -%>